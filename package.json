{
  "name": "userscriptd",
  "version": "0.1.0",
  "private": true,
  "main": "build/userscriptd.js",
  "scripts": {
    "prebuild": "rimraf build/",
    "build": "esbuild --bundle --minify --outdir=build/ --platform=node src/userscriptd.ts",
    "check": "npm-check --update",
    "eslint": "eslint --fix .",
    "prettier": "prettier --write .",
    "start": "ts-node --require dotenv/config --transpile-only src/index.ts",
    "test": "npm run eslint && npm run tsc",
    "tsc": "tsc",
    "watch": "npm run build -- --watch"
  },
  "dependencies": {
    "fastify": "^3.25.3",
    "fastify-static": "^4.5.0",
    "pino": "^7.6.3",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@types/node": "^17.0.8",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "dotenv": "^11.0.0",
    "esbuild": "^0.14.11",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "npm-check": "^5.9.2",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
